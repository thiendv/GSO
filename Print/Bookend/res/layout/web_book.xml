<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/downloaded"
    android:layout_width="fill_parent"
    android:layout_height="90dp"
    android:background="#222222"
    android:cacheColorHint="@color/black"
    android:minHeight="90dp"
    android:paddingTop="1dp" >

    <!-- サムネイル読込中に表示するプログレスバー -->
    <!-- サムネイル -->


    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_marginLeft="5dp" >



        <ImageView
            android:id="@+id/thumbnail_web"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="5dp"
            android:contentDescription="thumbnail"
            android:scaleType="fitCenter" />



        <ProgressBar
            android:id="@+id/WaitBar_web"
            style="?android:attr/progressBarStyleLarge"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="5dp" />

    </RelativeLayout>

    <!-- 項目詳細 -->

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="90dp"
        android:layout_weight="1"
        android:minHeight="90dp"
        android:orientation="vertical"
        android:paddingBottom="5dp"
        android:paddingLeft="5dp"
        android:paddingRight="5dp"
        android:paddingTop="4dp" >

        <!-- タイトル -->

        <TextView
            android:id="@+id/title_web"
            android:layout_width="fill_parent"
            android:layout_height="30dp"
            android:layout_weight="2"
            android:adjustViewBounds="true"
            android:ellipsize="end"
            android:gravity="left|center"
            android:maxHeight="30dp"
            android:maxLines="2"
            android:singleLine="false"
            android:text="@string/list_contents_title"
            android:textColor="@xml/text_color_selector"
            android:textSize="13dp"
            android:textStyle="bold" />

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="20dp"
            android:layout_gravity="left|center"
            android:layout_weight="1"
            android:gravity="center"
            android:maxHeight="20dp"
            android:singleLine="true" >

            <TextView
                android:id="@+id/last_access_date"
                android:layout_width="wrap_content"
                android:layout_height="20dp"
                android:layout_weight="1"
                android:adjustViewBounds="true"
                android:ellipsize="start"
                android:gravity="left|center"
                android:maxHeight="20dp"
                android:paddingRight="3dp"
                android:singleLine="true"
                android:text="2012/06/07"
                android:textColor="@xml/text_color_selector"
                android:textSize="10dp" />

            <!-- ダウンロードステータス -->

            <TextView
                android:id="@+id/shared_device"
                android:layout_width="wrap_content"
                android:layout_height="20dp"
                android:layout_weight="2"
                android:adjustViewBounds="true"
                android:ellipsize="end"
                android:gravity="left|center"
                android:maxHeight="20dp"
                android:singleLine="true"
                android:text="shared device"
                android:textColor="@xml/text_color_selector"
                android:textSize="10dp" />
        </LinearLayout>

        <!-- ダウンロード INIT,COMP -->

        <LinearLayout
            android:id="@+id/dl_init_set"
            android:layout_width="fill_parent"
            android:layout_height="30dp"
            android:layout_gravity="left|center"
            android:layout_weight="1"
            android:gravity="center"
            android:singleLine="true" >

            <Button
                android:id="@+id/web_dl_btn"
                android:layout_width="fill_parent"
                android:layout_height="30dp"
                android:layout_gravity="center_vertical|center_horizontal"
                android:background="@drawable/gray_button"
                android:focusable="false"
                android:onClick="downloadBtnAction"
                android:text="@string/download"
                android:textColor="@color/whitesmoke"
                android:textSize="9dp" />

            <TextView
                android:id="@+id/dl_status"
                android:layout_width="fill_parent"
                android:layout_height="30dp"
                android:adjustViewBounds="true"
                android:ellipsize="end"
                android:gravity="left|center"
                android:singleLine="true"
                android:textColor="@color/red"
                android:textSize="10dp"
                android:visibility="gone" />
        </LinearLayout>

        <!-- ダウンロード WAIT,ING -->

        <LinearLayout
            android:id="@+id/dl_ing_set"
            android:layout_width="fill_parent"
            android:layout_height="30dp"
            android:layout_gravity="left|center"
            android:layout_weight="1"
            android:gravity="center"
            android:singleLine="true"
            android:visibility="gone" >

            <ProgressBar
                android:id="@+id/dl_progress"
                style="?android:attr/progressBarStyleHorizontal"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:adjustViewBounds="true"
                android:gravity="left|center"
                android:max="100" />

            <Button
                android:id="@+id/dl_cancel_btn"
                android:layout_width="wrap_content"
                android:layout_height="24dp"
                android:layout_gravity="right"
                android:layout_marginLeft="5dp"
                android:background="@drawable/gray_button"
                android:focusable="false"
                android:onClick="cancelBtnAction"
                android:padding="2dp"
                android:text="@string/cancel"
                android:textColor="@color/whitesmoke"
                android:textSize="10dp" />
        </LinearLayout>

        <!-- ダウンロードERROR -->

        <LinearLayout
            android:id="@+id/dl_error_set"
            android:layout_width="fill_parent"
            android:layout_height="30dp"
            android:layout_gravity="left|center"
            android:layout_weight="1"
            android:adjustViewBounds="true"
            android:gravity="center"
            android:singleLine="true"
            android:visibility="gone" >

            <TextView
                android:id="@+id/dl_error_mes"
                style="?android:attr/progressBarStyleHorizontal"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:adjustViewBounds="true"
                android:ellipsize="end"
                android:gravity="left|center"
                android:singleLine="true"
                android:text="@string/download_fail"
                android:textColor="@color/red"
                android:textSize="10dp" />

            <Button
                android:id="@+id/dl_retry_btn"
                android:layout_width="wrap_content"
                android:layout_height="26dp"
                android:layout_gravity="right"
                android:layout_marginLeft="5dp"
                android:adjustViewBounds="true"
                android:background="@drawable/gray_button"
                android:focusable="false"
                android:onClick="retryBtnAction"
                android:padding="2dp"
                android:text="@string/retry"
                android:textColor="@color/whitesmoke"
                android:textSize="10dp" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>