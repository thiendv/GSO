<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- 押したときの設定 -->
    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <corners android:radius="5dip" />
            <gradient android:angle="90" android:endColor="#ffffff" android:startColor="#666666" />
            <padding android:bottom="10dip" android:left="0dip" android:right="0dip" android:top="10dip" />
        </shape>
    </item>

    <!-- 選択されたときの設定 -->
    <item android:state_selected="true">
        <shape android:shape="rectangle">
            <corners android:radius="5dip" />
            <gradient android:angle="90" android:endColor="#ffffff" android:startColor="#dddddd" />
            <padding android:bottom="10dip" android:left="0dip" android:right="0dip" android:top="10dip" />
        </shape>
    </item>
    
    <!-- ボタンが無効なとき -->
	<item android:state_enabled="false">
		<shape android:shape="rectangle">
            <corners android:radius="5dip" />
            <gradient android:angle="90" android:endColor="@color/gray" android:startColor="@color/dark_gray" />
            <padding android:bottom="10dip" android:left="0dip" android:right="0dip" android:top="10dip" />
        </shape>
	</item>
	
	<!-- 何も条件がない通常の設定 -->
    <item>
		<shape android:shape="rectangle">
            <corners android:radius="5dip" />
            <gradient android:angle="90" android:endColor="#bbbbbb" android:startColor="#444444" />
            <padding android:bottom="10dip" android:left="0dip" android:right="0dip" android:top="10dip" />
        </shape>
	</item>
</selector>