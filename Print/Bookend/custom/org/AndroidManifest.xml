<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="net.keyring.bookend"
    android:installLocation="internalOnly"
    android:versionCode="39"
    android:versionName="1.2.17" >

    <uses-sdk
        android:minSdkVersion="9"
        android:targetSdkVersion="19" />

    <uses-permission android:name="com.android.vending.BILLING" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.GET_TASKS" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.ACCESS_WIFI_STATE" />
    <uses-permission android:name="android.permission.WAKE_LOCK" />	
    <!-- AudioViewerで使用される権限 -->
   	<!-- 通話中に再生を停止するためにのみ使用します。権限の影響が大きすぎるので、当面は無効にしておく。 
   		<uses-permission android:name="android.permission.READ_PHONE_STATE"/>  
   	-->
    
    <supports-screens android:anyDensity="true" />

    <application
       android:icon="@drawable/icon"
       android:label="@string/app_name"
       android:theme="@android:style/Theme.NoTitleBar">
 
        <!-- MainActivity
        	*ブラウザからURLで起動されるので、アクティビティが二重に起動しないよう singleTask にしておく必要がある 
         -->
        <activity
            android:name="net.keyring.bookend.activity.MainActivity"
            android:launchMode="singleTask"
            android:configChanges="keyboardHidden|orientation"
            android:windowSoftInputMode="stateHidden|adjustResize" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
            <intent-filter>
                <action android:name="android.intent.action.VIEW" />

                <category android:name="android.intent.category.DEFAULT" />
                <category android:name="android.intent.category.BROWSABLE" />

                <data android:scheme="behttp" />
                <data android:scheme="beinfo" />
            </intent-filter>
        </activity> 

        <!-- AudioViewerで必要なActivity 
        	*PlayerControlActivityはNotificationバーから起動されるので、二重に起動しないよう singleTask にしておく必要がある
        -->
        <activity android:name="com.idoc.audioviewer.PlayerControlActivity"
			android:launchMode="singleTask"
			android:process=":AudioViewer"
			android:theme="@android:style/Theme.Light.NoTitleBar.Fullscreen"
            android:screenOrientation="portrait">
        </activity>
        <activity android:name="com.idoc.audioviewer.PlayerListActivity"
            android:process=":AudioViewer"
            android:theme="@android:style/Theme.Light.NoTitleBar.Fullscreen"
            android:screenOrientation="portrait">
        </activity>
        <activity android:name="com.idoc.audioviewer.HelpActivity"
            android:process=":AudioViewer"
            android:theme="@android:style/Theme.Light.NoTitleBar.Fullscreen"
            android:screenOrientation="portrait">
        </activity>
        <activity android:name="com.idoc.audioviewer.OuterLink"
            android:process=":AudioViewer"
            android:theme="@android:style/Theme.Light.NoTitleBar.Fullscreen"
            android:screenOrientation="portrait">
        </activity>
        <activity android:name="com.idoc.audioviewer.OpenToc"
            android:process=":AudioViewer"
            android:theme="@android:style/Theme.Light.NoTitleBar.Fullscreen"
            android:screenOrientation="portrait">
        </activity>
               
        <service android:name="com.idoc.audioviewer.coreplayer.MediaPlayerService"
            android:process=":AudioViewer">
        </service>
        
        <receiver android:name="com.idoc.audioviewer.coreplayer.NotificationReceiver"
            android:process=":AudioViewer"
            android:enabled="true" android:exported="false">
            <intent-filter >
                <action android:name="MY_NOTIFICATION"/>
            </intent-filter>
        </receiver>
        <!-- AudioViewerで必要なActivity -->
        
   		<!-- MCComicViewerで必要なActivity -->
		<activity android:name="jp.co.morisawa.mccomic.ViewerActivity"
				android:hardwareAccelerated="false"
				android:process=":MCComicViewer"
				android:configChanges="orientation|keyboardHidden|screenSize"
				android:theme="@style/Morisawa.Theme" >
		</activity>
		<activity android:name="jp.co.morisawa.mccomic.TableOfContentsActivity"
				android:process=":MCComicViewer"
				android:configChanges="orientation|keyboardHidden|screenSize"
				android:theme="@style/Morisawa.Theme.ViewPager" >
		</activity>
		<activity android:name="jp.co.morisawa.mccomic.ThumbnailGridActivity"
				android:process=":MCComicViewer"
				android:configChanges="orientation|keyboardHidden|screenSize"
				android:theme="@style/Morisawa.Theme.ViewPager" >
		</activity>
		<activity android:name="jp.co.morisawa.mccomic.HelpActivity"
				android:process=":MCComicViewer"
				android:configChanges="orientation|keyboardHidden|screenSize"
				android:theme="@style/Morisawa.Theme" >
		</activity>
		<!-- MCComicViewerで必要なActivity -->
		
		<!-- MCBookViewerで必要なActivity -->
		<activity android:name="jp.co.morisawa.mcbook.MainActivity"
			android:process=":MCBook"
			android:configChanges="orientation|keyboardHidden"
			android:theme="@style/Morisawa.Theme" >
		</activity>
		<activity android:name="jp.co.morisawa.mcbook.ContentListActivity"
			android:process=":MCBook"
			android:configChanges="orientation|keyboardHidden"
			android:theme="@style/Morisawa.Theme" >
		</activity>
		<activity android:name="jp.co.morisawa.mcbook.SimpleVideoActivity"
			android:process=":MCBook"
			android:configChanges="orientation|keyboardHidden"
			android:theme="@style/Morisawa.Theme" >
		</activity>
		<!-- MCBookViewerで必要なActivity -->
		       
        <activity
            android:name="net.keyring.bookend.activity.RegistFormActivity"
            android:configChanges="keyboardHidden|orientation" >
            <intent-filter>
                <action android:name="android.intent.action.VIEW" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        <activity
            android:name="net.keyring.bookend.activity.WebBookShelfActivity"
            android:configChanges="keyboardHidden|orientation" >
            <intent-filter>
                <action android:name="android.intent.action.VIEW" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        <activity
            android:name="net.keyring.bookend.activity.OptionActivity"
            android:configChanges="keyboardHidden|orientation"
            android:windowSoftInputMode="stateHidden|adjustResize" >
            <intent-filter>
                <action android:name="android.intent.action.VIEW" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        <activity
            android:name="net.keyring.bookend.activity.StoreListActivity"
            android:configChanges="keyboardHidden|orientation" >
            <intent-filter>
                <action android:name="android.intent.action.VIEW" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>

        <service
            android:name="net.keyring.bookend.service.NewDownloadService"
            android:exported="false"
            android:label="@string/app_name"
            android:noHistory="true" >
            <intent-filter>
                <action android:name="net.keyring.bookend.callback.NewDownloadCallback" />
                <category android:name="category_bookend"/>
            </intent-filter>
        </service>
        <service
            android:name="net.keyring.bookend.service.WebBookShelfDlService"
            android:exported="false"
            android:label="@string/app_name"
            android:noHistory="true" >
            <intent-filter>
                <action android:name="net.keyring.bookend.callback.WebBookShelfDlCallback" />
                <category android:name="category_bookend"/>
            </intent-filter>
        </service>
        <service
            android:name="net.keyring.bookend.service.ProcessCheckService"
            android:label="@string/app_name"
            android:noHistory="true" >
        </service>
        <service android:name="net.keyring.bookend.service.BillingService" />

        <receiver android:name="net.keyring.bookend.billing.BillingReceiver" >
            <intent-filter>
                <action android:name="com.android.vending.billing.IN_APP_NOTIFY" />
                <action android:name="com.android.vending.billing.RESPONSE_CODE" />
                <action android:name="com.android.vending.billing.PURCHASE_STATE_CHANGED" />
            </intent-filter>
        </receiver>
    </application>

</manifest>