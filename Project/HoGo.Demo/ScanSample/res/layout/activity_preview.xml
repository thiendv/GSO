<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/activity_root"
    android:layout_width="1024px"
    android:layout_height="600px"
    android:background="@color/lightgray" >

    <!-- グレー背景 -->
    <FrameLayout
        android:layout_width="800px"
        android:layout_height="521px"
        android:layout_marginTop="40px"
        android:layout_marginLeft="10px"
        android:background="@drawable/destination_background_in" />

    <!-- 画像スクロール領域. ページめくりはViewFlipperで表現する(スクロールでのページめくりはしない前提) -->
    <RelativeLayout
        android:id="@+id/preview_area"
        android:layout_width="812px"
        android:layout_height="512px"
        android:layout_marginLeft="2px"
        android:layout_marginTop="44px" >

        <ImageView
            android:layout_width="480px"
            android:layout_height="480px"
            android:id="@+id/image_preview"
            android:layout_centerInParent="true"
            android:layout_gravity="center"
            android:scaleType="center" />

        <ProgressBar
            android:id="@+id/preview_proc_bar"
            style="?android:attr/progressBarStyleLarge"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true" />

    </RelativeLayout>

    <!-- ページめくりキー -->
    <FrameLayout
        android:id="@+id/btn_page_prev"
        android:layout_width="67px"
        android:layout_height="92px"
        android:layout_centerVertical="true"
        android:layout_marginLeft="18px"
        android:background="@drawable/selector_sim_bt_previewprev" />

    <FrameLayout
        android:id="@+id/btn_page_next"
        android:layout_width="67px"
        android:layout_height="92px"
        android:layout_centerVertical="true"
        android:layout_marginLeft="737px"
        android:background="@drawable/selector_sim_bt_previewnext" />

    <!-- ページ数背景 -->

    <FrameLayout
        android:layout_width="178px"
        android:layout_height="56px"
        android:layout_marginLeft="826px"
        android:layout_marginTop="83px"
        android:background="@drawable/sim_back_previewpage" />

    <TextView
        android:id="@+id/text_cur_page"
        android:layout_width="120px"
        android:layout_height="wrap_content"
        android:layout_marginLeft="812px"
        android:layout_marginTop="88px"
        android:gravity="right"
        android:textColor="@color/white"
        android:textSize="40px" />

    <TextView
        android:layout_width="16px"
        android:layout_height="wrap_content"
        android:layout_marginLeft="932px"
        android:layout_marginTop="110px"
        android:gravity="center"
        android:text="/"
        android:textColor="@color/white"
        android:textSize="20px" />

    <TextView
        android:id="@+id/text_total_page"
        android:layout_width="60px"
        android:layout_height="wrap_content"
        android:layout_marginLeft="948px"
        android:layout_marginTop="110px"
        android:gravity="left"
        android:textColor="@color/white"
        android:textSize="20px" />

    <!-- キャンセルボタン -->

    <Button
        android:id="@+id/btn_cancel"
        android:layout_width="144px"
        android:layout_height="60px"
        android:layout_gravity="top|left"
        android:layout_marginLeft="842px"
        android:layout_marginTop="324px"
            android:gravity="center_horizontal"
            android:text="Cancel"
            android:textColor="@color/black"
            android:textSize="22px" />

    <!-- スタートボタン -->

    <Button
        android:id="@+id/btn_start"
        android:layout_width="144px"
        android:layout_height="80px"
        android:layout_gravity="top|left"
        android:layout_marginLeft="842px"
        android:layout_marginTop="405px"
            android:shadowRadius="1"
            android:text="Send"
            android:textColor="@color/black"
            android:textSize="24px" />

</RelativeLayout>
