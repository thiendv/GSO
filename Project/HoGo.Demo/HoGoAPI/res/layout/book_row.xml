<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="horizontal"
              android:paddingLeft="@dimen/book_item_padding"
              android:paddingTop="@dimen/book_shelf_margin_bottom"
              android:background="@drawable/ic_img_wooden_bookshelf_patch"
              android:layout_width="match_parent"
              android:layout_height="wrap_content">

    <ImageView
            android:id="@+id/book_1"
            android:layout_width="0dp"
            android:layout_marginRight="@dimen/book_item_padding"
            android:layout_height="match_parent"
            android:layout_weight="1"/>
    <ImageView
            android:id="@+id/book_2"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginRight="@dimen/book_item_padding"
            android:layout_weight="1"/>
    <ImageView
            android:id="@+id/book_3"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginRight="@dimen/book_item_padding"
            android:layout_weight="1"/>
</LinearLayout>